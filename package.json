{
	"name": "GEL",
	"version": "0.0.1",
	"description": "The design system and react components for Westpac GEL",
	"main": "index.js",
	"repository": "https://github.com/WestpacGEL/GUI3.git",
	"author": "Westpac GEL Team <gel@westpac.com.au>",
	"license": "GPL-3.0+",
	"private": true,
	"scripts": {
		"start": "/bin/sh -c 'cd components/${1:-$0} && bolt start'",
		"nuke": "rm -rf node_modules && bolt ws exec -- rm -rf node_modules",
		"fresh": "bolt nuke && bolt install",
		"new": "node ./helpers/cli.js",
		"dev": "/bin/sh -c 'PACKAGE_NAME=$0 webpack-dev-server --config helpers/example/webpack.config.js'",
		"format": "prettier --write \"**/*.{js,md,json}\"",
		"test:format": "prettier --list-different \"**/*.{js,md,json}\"",
		"test:unit": "jest",
		"test:unit-watch": "jest --watch --coverage",
		"test": "bolt test:format && bolt test:unit"
	},
	"bolt": {
		"workspaces": [
			"components/*",
			"brands/*"
		]
	},
	"jest": {
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"components/*/src/*.js"
		],
		"transformIgnorePatterns": [
			"/node_modules/(?!@westpac/*).+\\.js$"
		]
	},
	"devDependencies": {
		"@babel/core": "^7.2.0",
		"@babel/plugin-proposal-class-properties": "^7.2.1",
		"@babel/preset-env": "^7.2.0",
		"@babel/preset-react": "^7.0.0",
		"babel-core": "^7.0.0-bridge.0",
		"babel-jest": "^23.6.0",
		"babel-loader": "^8.0.4",
		"cypress": "^3.1.3",
		"html-webpack-plugin": "^3.2.0",
		"html-webpack-root-plugin": "^0.10.0",
		"jest": "^23.6.0",
		"jest-cli": "^23.6.0",
		"react-router-dom": "^4.3.1",
		"regenerator-runtime": "^0.13.1",
		"start-server-and-test": "^1.7.11",
		"tmp": "^0.0.33",
		"webpack": "^4.27.1",
		"webpack-cli": "^3.1.2",
		"webpack-dev-server": "^3.1.10"
	},
	"dependencies": {
		"@emotion/core": "^10.0.4",
		"@emotion/styled": "^10.0.4",
		"common-tags": "^1.8.0",
		"emotion-theming": "^10.0.4",
		"facepaint": "^1.2.1",
		"prettier": "^1.15.3",
		"react": "^16.7.0-alpha.1",
		"react-dom": "^16.7.0-alpha.1",
		"resize-observer-polyfill": "^1.5.0"
	}
}
