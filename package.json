{
	"name": "gel",
	"description": "The design system and react components for Westpac GEL",
	"repository": "https://github.com/WestpacGEL/GEL.git",
	"author": "Westpac GEL Team <gel@westpac.com.au>",
	"contributors": [
		{
			"name": "Dominik Wilkowski",
			"email": "Hi@Dominik-Wilkowski.com",
			"url": "https://dominik-wilkowski.com"
		},
		{
			"name": "Joss Mackison",
			"email": "joss@thinkmill.com.au",
			"url": "http://jossmackison.me"
		}
	],
	"license": "GPL-3.0+",
	"private": true,
	"scripts": {
		"start": "/bin/sh -c 'cd components/${1:-$0} && yarn start'",
		"docs": "yarn build && docz dev",
		"docs:build": "yarn build && docz build && yarn docs:redirects",
		"docs:redirects": "cp helpers/public/* docs/",
		"nuke": "find ./components -type d -name 'node_modules' -exec rm -rf {} + && find ./brands -type d -name 'node_modules' -exec rm -rf {} + && rm -rf node_modules",
		"nuke:lock": "rm yarn.lock && rm yarn-error.log",
		"build": "preconstruct build",
		"dev": "preconstruct dev",
		"fresh": "yarn nuke && yarn",
		"new": "node ./helpers/cli.js",
		"format": "prettier --write \"**/*.{js,md,mdx,json}\"",
		"test:format": "prettier --list-different \"**/*.{js,md,mdx,json}\"",
		"test:unit": "jest",
		"test:unit-watch": "jest --watch --coverage",
		"test:integration": "node helpers/tester.js",
		"test": "yarn test:format && yarn test:unit && yarn test:integration",
		"postinstall": "manypkg check && preconstruct dev",
		"publish-packages": "yarn build && yarn changeset publish",
		"version-packages": "yarn changeset version"
	},
	"workspaces": [
		"components/*",
		"brands/*"
	],
	"jest": {
		"testRegex": "\\.spec.js$",
		"collectCoverageFrom": [
			"components/*/src/*.js"
		],
		"transformIgnorePatterns": [
			"/node_modules/(?!@westpac/*).+\\.js$"
		]
	},
	"dependencies": {
		"@babel/cli": "^7.6.4",
		"@babel/core": "^7.6.4",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"@babel/preset-env": "^7.6.3",
		"@babel/preset-react": "^7.6.3",
		"@changesets/cli": "^2.1.2",
		"@emotion/core": "^10.0.22",
		"@emotion/weak-memoize": "^0.2.4",
		"@manypkg/cli": "^0.8.0",
		"babel-core": "^7.0.0-bridge.0",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.0.6",
		"babel-plugin-codegen": "^3.0.0",
		"cfonts": "^2.4.5",
		"chalk": "^2.4.2",
		"color": "^3.1.2",
		"common-tags": "^1.8.0",
		"copy-webpack-plugin": "^5.0.4",
		"cypress": "^3.5.0",
		"docz": "^1.3.2",
		"docz-theme-default": "^1.2.0",
		"facepaint": "^1.2.1",
		"focus-trap-react": "^6.0.0",
		"get-workspaces": "^0.5.0",
		"html-webpack-plugin": "^3.2.0",
		"html-webpack-root-plugin": "^0.10.0",
		"jest": "^24.9.0",
		"jest-cli": "^24.9.0",
		"lodash.merge": "^4.6.2",
		"mini-svg-data-uri": "^1.1.3",
		"preconstruct": "^0.3.1",
		"prettier": "^1.18.2",
		"prop-types": "^15.7.2",
		"react": "^16.11.0",
		"react-dom": "^16.11.0",
		"react-focus-lock": "^2.2.1",
		"react-router-dom": "^5.1.2",
		"react-transition-group": "^4.3.0",
		"regenerator-runtime": "^0.13.3",
		"resize-observer-polyfill": "^1.5.1",
		"shortid": "^2.2.15",
		"start-server-and-test": "^1.10.6",
		"tmp": "^0.1.0",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.9",
		"webpack-dev-server": "^3.9.0"
	},
	"resolutions": {
		"ansi-styles": "^3.2.0"
	},
	"preconstruct": {
		"packages": [
			"components/*",
			"brands/*"
		]
	}
}
